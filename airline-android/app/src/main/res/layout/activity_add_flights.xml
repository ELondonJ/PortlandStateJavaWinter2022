<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_background1"
    tools:context=".AddFlights">

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="708dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewAirName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/lato_bold"
            android:inputType="none"
            android:text="Airline Name"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/airlineName"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/air_txtfill"
            android:ems="10"
            android:hint=" Delta"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/editTextAirNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:fontFamily="@font/lato_bold"
            android:inputType="none"
            android:text="Flight Number"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/flightNumber"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/air_txtfill"
            android:ems="10"
            android:hint=" 12345"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textViewAirSrc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:fontFamily="@font/lato_bold"
            android:inputType="none"
            android:text="Source Airport"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/srcCode"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/air_txtfill"
            android:ems="3"
            android:hint=" PDX"
            android:maxLength="3"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAirSrcDate"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/lato_bold"
                android:inputType="none"
                android:text="Date"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textViewAirSrcTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/lato_bold"
                android:inputType="none"
                android:text="Time"
                android:textColor="@color/white"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/departDate"
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/air_txtfill"
                android:editable="false"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:hint="Departure date"
                android:inputType="none"
                android:maxLines="1"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/departTime"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/air_txtfill"
                android:editable="false"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:hint="Departure time"
                android:inputType="none"
                android:textColor="@color/white"
                android:maxLines="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewAirDest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:fontFamily="@font/lato_bold"
            android:inputType="none"
            android:text="Destination Airport"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <EditText
            android:id="@+id/destCode"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:background="@drawable/air_txtfill"
            android:ems="3"
            android:hint=" LAX"
            android:maxLength="3"
            android:maxLines="1"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAirDestDate"
                android:layout_width="227dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/lato_bold"
                android:inputType="none"
                android:text="Date"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/textViewAirDestTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/lato_bold"
                android:inputType="none"
                android:text="Time"
                android:textColor="@color/white"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/arriveDate"
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/air_txtfill"
                android:editable="false"
                android:ems="10"
                android:hint="Arrival Date"
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:maxLines="1" />

            <EditText
                android:id="@+id/arriveTime"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/air_txtfill"
                android:editable="false"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:hint="Arrival Date"
                android:inputType="time"
                android:maxLines="1" />
        </LinearLayout>

        <Button
            android:id="@+id/add_flight_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/air_add_button"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Add Flight" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>