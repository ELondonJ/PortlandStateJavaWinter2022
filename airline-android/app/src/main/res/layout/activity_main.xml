<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="370dp"
        android:layout_height="259dp"
        android:backgroundTint="@color/AirlineBlueTeal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944">

        <Button
            android:id="@+id/button11"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:fontFamily="@font/lato_bold"
            android:onClick="launchFindAirline"
            android:text="@string/airline"
            android:textSize="20dp"
            app:backgroundTint="@color/tan11" />

        <Button
            android:id="@+id/button10"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:backgroundTint="@color/AirlineButtonBlue"
            android:fontFamily="@font/lato_bold"
            android:onClick="launchFindFlights"
            android:text="@string/find_flights"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:fontFamily="@font/lato_bold"
            android:onClick="launchAddFlights"
            android:text="Add Flights"
            android:textSize="20dp"
            app:backgroundTint="@color/AirlineButtonBlue" />

    </LinearLayout>

    <ListView
        android:id="@+id/airlineList"
        android:layout_width="332dp"
        android:layout_height="292dp"
        android:background="@drawable/air_txtfill"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.512" />


</androidx.constraintlayout.widget.ConstraintLayout>